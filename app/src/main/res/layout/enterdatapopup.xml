<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center">
    <!-- For some reason width needs to be hardcoded otherwise it is too slim -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing"
            android:text="              None      Light      Medium      Heavy"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/dancing"
            android:textColor="@color/white"
            android:text="Bleeding: "/>

        <ImageView
            android:id="@+id/nobleeding"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/lightbleeding"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/mediumbleeding"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/heavybleeding"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing"
            android:text="Cramps: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/nocramp"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/lightcramp"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/mediumcramp"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/heavycramp"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_action_name" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:text="OK"
        android:textColor="@color/black"/>



</LinearLayout>