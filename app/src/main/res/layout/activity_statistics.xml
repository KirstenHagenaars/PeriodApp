<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:text="Statistics"
        android:textAlignment="center"
        android:fontFamily="@font/dancing"
        android:textColor="@color/white"
        android:textSize="50sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="123dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cyclelength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/printclear"
            android:text="Cycle length: "
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/periodlength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/printclear"
            android:text="Period length: "
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/initdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/printclear"
            android:text="Date of first period:"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="242dp"
            android:layout_marginVertical="333dp"
            android:fontFamily="@font/printclear"
            android:paddingLeft="20dp"
            android:text="Tap to get a useful tip!"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginVertical="333dp"
            android:layout_marginLeft="15dp"
            android:background="@color/period"
            android:fontFamily="@font/printclearbold"
            android:text="Tip!"
            android:textSize="20sp" />
</LinearLayout>
</FrameLayout>